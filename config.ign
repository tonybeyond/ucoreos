  "systemd": {
    "units": [
      {
        "contents": "[Unit]\nDescription=Rebase to uCore NVIDIA, layer guest agent, and reboot\nWants=network-online.target\nAfter=network-online.target\nConditionPathExists=!/etc/ucore-rebase-stamp\n\n[Service]\nType=oneshot\nExecStart=/usr/bin/rpm-ostree rebase ostree-unverified-registry:ghcr.io/ublue-os/ucore:stable-nvidia --install=qemu-guest-agent\nExecStartPost=/usr/bin/touch /etc/ucore-rebase-stamp\nExecStartPost=/usr/bin/systemctl disable setup-ucore.service\nExecStartPost=/usr/bin/systemctl reboot\n\n[Install]\nWantedBy=multi-user.target\n",
        "enabled": true,
        "name": "setup-ucore.service"
      },
      {
        "contents": "[Unit]\nDescription=Remove default Docker packages\nWants=network-online.target\nAfter=network-online.target\nBefore=zincati.service\nConditionPathExists=!/var/lib/%N.stamp\n\n[Service]\nType=oneshot\nRemainAfterExit=yes\nExecStart=/usr/bin/rpm-ostree override remove moby-engine containerd runc docker-cli podman\nExecStart=/usr/bin/touch /var/lib/%N.stamp\n\n[Install]\nWantedBy=multi-user.target\n",
        "enabled": true,
        "name": "rpm-ostree-uninstall-docker.service"
      },
      {
        "contents": "[Unit]\nDescription=Install Docker CE\nWants=network-online.target\nRequires=rpm-ostree-uninstall-docker.service\nAfter=rpm-ostree-uninstall-docker.service\nBefore=zincati.service\nConditionPathExists=!/var/lib/%N.stamp\n\n[Service]\nType=oneshot\nRemainAfterExit=yes\nExecStart=/usr/bin/rpm-ostree install docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin\nExecStart=/usr/bin/touch /var/lib/%N.stamp\nExecStartPost=/usr/bin/systemctl reboot\n\n[Install]\nWantedBy=multi-user.target\n",
        "enabled": true,
        "name": "rpm-ostree-install-docker.service"
      },
      {
        "enabled": true,
        "name": "docker.service"
      },
      {
        "enabled": true,
        "name": "qemu-guest-agent.service"
      },
      {
        "contents": "[Unit]\nDescription=Generate CDI spec for NVIDIA GPUs\nAfter=multi-user.target docker.service\nWants=multi-user.target docker.service\n\n[Service]\nType=oneshot\nExecStartPre=/usr/bin/sleep 15\nExecStart=/usr/bin/nvidia-ctk cdi generate --output=/etc/cdi/nvidia.yaml\n\n[Install]\nWantedBy=multi-user.target\n",
        "enabled": true,
        "name": "nvidia-cdi-generate.service"
      },
      {
        "contents": "[Unit]\nDescription=Ollama LLM Container with NVIDIA GPU\nWants=network-online.target docker.service nvidia-cdi-generate.service\nAfter=network-online.target docker.service nvidia-cdi-generate.service\n\n[Service]\nRestart=always\nTimeoutStartSec=15m\nExecStartPre=-/usr/bin/docker pull ollama/ollama:latest\nExecStart=/usr/bin/docker run --rm --name ollama \\\n  --runtime=nvidia \\\n  --gpus all \\\n  -p 0.0.0.0:11434:11434 \\\n  -v ollama-data:/root/.ollama \\\n  ollama/ollama:latest\nExecStop=/usr/bin/docker stop ollama\n\n[Install]\nWantedBy=multi-user.target\n",
        "enabled": true,
        "name": "ollama-container.service"
      },
      {
        "contents": "[Unit]\nDescription=Tailscale container\nWants=network-online.target docker.service\nAfter=network-online.target docker.service\n\n[Service]\nRestart=always\nExecStartPre=-/usr/bin/docker pull tailscale/tailscale:latest\nExecStart=/usr/bin/docker run --rm --name=tailscaled \\\n  -v /var/lib/tailscale:/var/lib/tailscale \\\n  -v /dev/net/tun:/dev/net/tun \\\n  --network=host \\\n  --cap-add=NET_ADMIN,NET_RAW \\\n  tailscale/tailscale:latest\nExecStop=/usr/bin/docker stop tailscaled\n\n[Install]\nWantedBy=multi-user.target\n",
        "enabled": true,
        "name": "tailscale-container.service"
      },
